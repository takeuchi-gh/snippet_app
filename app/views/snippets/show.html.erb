<div class="wrapper">
  <%= render partial: "shared/sidebar" %>
  <div class="main">
    <div class=container>
      <div class="form-group row">
        <div class="col-md-4">
          <p>タイトル</p>
          <div class="form-control">
            <%= @snippet.title %>
          </div>
        </div>
        <div class="col-md-4">
          <p>カテゴリー</p>
          <div class="form-control">
            <%= @language.name %>
          </div>
        </div>
        <div class="form-group col-md-4">
          <%= link_to '編集', edit_snippet_path(@snippet.id), class: 'btn btn-dark position' %>
          <%= link_to '削除', snippet_path(@snippet.id), method: 'DELETE', data: { confirm: '削除しますか？' }, class: 'btn btn-dark position' %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-8">
          <p>コード</p>
          <pre class="prettyprint linenums"><%= @snippet.code %></pre>
        </div>
        <div class="col-sm-4">
          <p>コメント</p>
          <textarea class="form-control" rows="12" readonly wrap="off"><%= @snippet.comment %></textarea>
        </div>
      </div>
    </div>
  </div>
</div>