<div class=container>
  <%= form_with(model: @snippet, local: true) do |form| %>
    <div class="form-group row">
      <div class="col-sm-4">
        <p>タイトル</p>
        <%= form.text_field :title, class: 'form-control' %>
      </div>
      <div class="col-sm-4">
        <p>カテゴリー</p>
        <%= form.collection_select :language_id, current_user.languages, :id, :name,
          {prompt: "選択してください"}, class: 'form-control' %>
      </div>
      <div class="form-group col-md-4">
        <%= form.submit "登録", class: 'btn btn-dark position' %>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-sm-8">
        <p>コード</p>
        <%= form.text_area :code, class: 'form-control', rows: "12", wrap: "off" %>
      </div>
      <div class="col-sm-4">
        <p>コメント</p>
        <%= form.text_area :comment, class: 'form-control', rows: "12", wrap: "off" %>
      </div>
    </div>

  <% end %>
  </div>